@model retailCLDVportal.Models.ProductInput
@{
    ViewData["Title"] = "New Product";
}
<h2>New Product</h2>

<form asp-action="Create" asp-controller="Products" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">R</span>
                        <input asp-for="Price" class="form-control" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                    <input asp-for="StockQuantity" class="form-control" />
                    <span asp-validation-for="StockQuantity" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3 mt-3">
                <label asp-for="MediaFile" class="form-label">Upload Image/Video</label>
                <input asp-for="MediaFile" type="file" class="form-control"
                       accept=".jpg,.jpeg,.png,.webp,.mp4,.webm,.mov,.avi,.mkv" />
                <div class="form-text">
                    Supported: jpg, jpeg, png, webp, mp4, webm, mov, avi, mkv.
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button class="btn btn-primary" type="submit">Create</button>
                <a class="btn btn-outline-secondary" asp-controller="Products" asp-action="Index">Cancel</a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="border rounded p-3" style="min-height: 320px;">
                <div class="text-muted">Media preview</div>
                <!-- Optional: simple preview via JS (image-only) -->
                <img id="previewImg" class="img-fluid mt-2 d-none" alt="preview"/>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const input = document.querySelector('input[type="file"][name="MediaFile"]');
        const img = document.getElementById('previewImg');
        if (input && img) {
            input.addEventListener('change', e => {
                const f = e.target.files?.[0];
                if (!f) { img.classList.add('d-none'); return; }
                if (f.type.startsWith('image/')) {
                    const url = URL.createObjectURL(f);
                    img.src = url;
                    img.classList.remove('d-none');
                } else {
                    img.classList.add('d-none');
                }
            });
        }
    </script>
}

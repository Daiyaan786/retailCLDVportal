@model retailCLDVportal.Models.ProductEntity
@{
    ViewData["Title"] = "Edit Product";
    decimal? price = Model.PriceCents.HasValue ? Model.PriceCents.Value / 100m : null;
}

<div class="page-container p-4" style="background: linear-gradient(135deg, #0d47a1, #1976d2); min-height: 100vh; color: #fff;">
    <div class="container bg-white text-dark rounded shadow-lg p-4">
        <h2 class="mb-4"> Edit Product</h2>

        <form asp-controller="Products" asp-action="Edit"
              asp-route-pk="@Model.PartitionKey" asp-route-rk="@Model.RowKey"
              method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Hidden keys -->
            <input type="hidden" asp-for="PartitionKey" />
            <input type="hidden" asp-for="RowKey" />

            <div class="row g-4">
                <!-- Left column (form inputs) -->
                <div class="col-lg-8">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-bold">Product Name</label>
                        <input asp-for="Name" class="form-control shadow-sm" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Category" class="form-label fw-bold">Category</label>
                        <input asp-for="Category" class="form-control shadow-sm" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-bold">Description</label>
                        <textarea asp-for="Description" class="form-control shadow-sm" rows="5"></textarea>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Price</label>
                            <div class="input-group shadow-sm">
                                <span class="input-group-text">R</span>
                                <input name="Price" value="@(price?.ToString("0.00"))" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="StockQuantity" class="form-label fw-bold">Stock Quantity</label>
                            <input asp-for="StockQuantity" class="form-control shadow-sm" />
                        </div>
                    </div>

                    <div class="mb-3 mt-3">
                        <label class="form-label fw-bold">Replace Image/Video (optional)</label>
                        <input type="file" name="MediaFile" class="form-control shadow-sm"
                               accept=".jpg,.jpeg,.png,.webp,.mp4,.webm,.mov,.avi,.mkv" />
                        <div class="form-text">Leave blank to keep existing media.</div>
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button class="btn btn-primary px-4 shadow" type="submit"> Save</button>
                        <a class="btn btn-outline-secondary px-4 shadow" asp-action="Index"> Cancel</a>
                    </div>
                </div>

                <!-- Right column (preview media) -->
                <div class="col-lg-4">
                    <div class="border rounded p-3 shadow-sm" style="min-height:320px;">
                        <div class="text-muted fw-bold">Current media</div>
                        @if (!string.IsNullOrWhiteSpace(Model.MediaUrl) && (Model.MediaContentType?.StartsWith("image/") ?? false))
                        {
                            <img src="@Model.MediaUrl" class="img-fluid mt-2 rounded shadow-sm border" alt="current media" />
                        }
                        else if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
                        {
                            <a href="@Model.MediaUrl" target="_blank" class="btn btn-outline-primary mt-3">Open Media</a>
                        }
                        else
                        {
                            <div class="text-muted mt-3 fst-italic">No media uploaded.</div>
                        }
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

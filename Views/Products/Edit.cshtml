@model retailCLDVportal.Models.ProductEntity
@{
    ViewData["Title"] = "Edit Product";
    decimal? price = Model.PriceCents.HasValue ? Model.PriceCents.Value / 100m : null;
}

<h2>Edit Product</h2>

<form asp-controller="Products" asp-action="Edit"
      asp-route-pk="@Model.PartitionKey" asp-route-rk="@Model.RowKey"
      method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Keep keys (optional; route already carries them) -->
    <input type="hidden" asp-for="PartitionKey" />
    <input type="hidden" asp-for="RowKey" />

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Product Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Category" class="form-label">Category</label>
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="5"></textarea>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">R</span>
                        <!-- Bind to ProductInput.Price (not PriceCents) -->
                        <input name="Price" value="@(price?.ToString("0.00"))" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
                    <input asp-for="StockQuantity" class="form-control" />
                </div>
            </div>

            <div class="mb-3 mt-3">
                <label class="form-label">Replace Image/Video (optional)</label>
                <!-- Name must match ProductInput.MediaFile -->
                <input type="file" name="MediaFile" class="form-control"
                       accept=".jpg,.jpeg,.png,.webp,.mp4,.webm,.mov,.avi,.mkv" />
                <div class="form-text">Leave blank to keep existing media.</div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Cancel</a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="border rounded p-3" style="min-height:320px;">
                <div class="text-muted">Current media</div>
                @if (!string.IsNullOrWhiteSpace(Model.MediaUrl) && (Model.MediaContentType?.StartsWith("image/") ?? false))
                {
                    <img src="@Model.MediaUrl" class="img-fluid mt-2" alt="current media" />
                }
                else if (!string.IsNullOrWhiteSpace(Model.MediaUrl))
                {
                    <a href="@Model.MediaUrl" target="_blank" class="btn btn-outline-light mt-2">Open media</a>
                }
                else
                {
                    <div class="text-muted mt-2">No media uploaded.</div>
                }
            </div>
        </div>
    </div>
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }

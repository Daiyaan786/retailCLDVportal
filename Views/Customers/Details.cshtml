@model retailCLDVportal.Models.CustomerEntity
@{
    ViewData["Title"] = "Customer Details";
}

<div class="customer-details-page">
    <div class="container py-5 text-white">
        <h2>Customer Saved</h2>

        <p><strong>PartitionKey:</strong> @Model.PartitionKey</p>
        <p><strong>RowKey:</strong> @Model.RowKey</p>

        <table class="table table-borderless text-white">
            <tbody>
                <tr><th>First Name</th><td>@Model.FirstName</td></tr>
                <tr><th>Surname</th><td>@Model.Surname</td></tr>
                <tr><th>Date of Birth</th><td>@Model.DateOfBirth?.ToString("yyyy-MM-dd")</td></tr>
                <tr><th>Phone</th><td>@Model.PhoneNumber</td></tr>
                <tr><th>Email</th><td>@Model.Email</td></tr>
                <tr><th>Company</th><td>@Model.CompanyName</td></tr>
                <tr><th>Address 1</th><td>@Model.AddressLine1</td></tr>
                <tr><th>Address 2</th><td>@Model.AddressLine2</td></tr>
                <tr><th>City</th><td>@Model.City</td></tr>
                <tr><th>State</th><td>@Model.State</td></tr>
                <tr><th>Zip Code</th><td>@Model.ZipCode</td></tr>
                <tr><th>Country</th><td>@Model.Country</td></tr>
                <tr><th>Created (UTC)</th><td>@Model.CreatedAtUtc</td></tr>
            </tbody>
        </table>

        <a class="btn btn-light" asp-action="Create">Create another</a>
    </div>
</div>

<style>
    .customer-details-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a4dbf, #4e73df); /* Blue gradient */
    }

    .table th {
        width: 200px;
    }
</style>

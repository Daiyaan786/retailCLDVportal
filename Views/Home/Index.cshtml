@{
    ViewData["Title"] = "Home";
}
@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

    <div class="container py-5">
        <div class="text-center mb-5">
            <h1 class="display-5 fw-bold">ABC Retail CLoud Management Portal</h1>
            <p class="text-muted mb-0">Choose a section to get started</p>
        </div>

        <div class="row g-4 justify-content-center home-grid">
    <div class="col-12 col-sm-6 col-lg-3">
        <a class="btn btn-home w-100" asp-controller="Customers" asp-action="Index">
        <i class="bi bi-people-fill me-2" aria-hidden="true"></i>
        <span>Customers</span>
        </a>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <a class="btn btn-home w-100" asp-controller="Products" asp-action="Index">
        <i class="bi bi-box-seam-fill me-2" aria-hidden="true"></i>
        <span>Products</span>
        </a>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <a class="btn btn-home w-100" href="/Inventory/Peek">
        <i class="bi bi-boxes me-2" aria-hidden="true"></i>
        <span>Inventory</span>
        </a>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <a class="btn btn-home w-100" asp-controller="Orders" asp-action="Index">
        <i class="bi bi-cart-check-fill me-2"></i>
        <span>Order</span>
        </a>
    </div>

    <div class="col-12 col-sm-6 col-lg-3">
        <a class="btn btn-home w-100" asp-controller="Contract" asp-action="Index">
        <i class="bi bi-cloud-arrow-up-fill me-2" aria-hidden="true"></i>
        <span>Contracts</span>
        </a>
    </div>
    </div>

    </div>
</div>

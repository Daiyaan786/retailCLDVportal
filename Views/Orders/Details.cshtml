@model retailCLDVportal.Models.OrderEntity
@{
    ViewData["Title"] = "Order Details";
    string Money(long cents, string? cur)
    {
        var v = cents / 100m; var prefix = (cur ?? "ZAR") == "ZAR" ? "R " : "";
        return prefix + v.ToString("0.00");
    }
}

<!-- Blue theme wrapper -->
<div class="blue-theme min-vh-100 d-flex align-items-center justify-content-center p-4">
    <div class="order-container glass-card shadow-lg rounded-4 bg-white p-4 w-100">

        <!-- Page header -->
        <div class="page-head d-flex justify-content-between align-items-start mb-4">
            <div>
                <h1 class="fw-bold text-primary">Order @Model.OrderNo</h1>
                <p class="page-sub text-secondary">
                    Placed @Model.CreatedUtc.ToString("yyyy-MM-dd HH:mm") UTC
                </p>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-light border border-white text-white px-3 py-2 rounded-pill shadow-sm"
                   asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
                <a class="btn btn-warning px-3 py-2 rounded-pill shadow-sm text-dark fw-semibold"
                   asp-action="Edit"
                   asp-route-pk="@Model.PartitionKey"
                   asp-route-rk="@Model.RowKey">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            </div>
        </div>

        <!-- Order Details -->
        <div class="p-4 rounded-3 bg-light shadow-sm">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold text-primary">Customer</dt>
                <dd class="col-sm-9">@Model.CustomerName</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Product</dt>
                <dd class="col-sm-9">@Model.ProductName</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Quantity</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Unit Price</dt>
                <dd class="col-sm-9">@Money(Model.UnitPriceCents, Model.Currency)</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Total</dt>
                <dd class="col-sm-9 fw-bold">@Money(Model.TotalCents, Model.Currency)</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3 fw-semibold text-primary">Keys</dt>
                <dd class="col-sm-9"><code>@Model.PartitionKey</code> / <code>@Model.RowKey</code></dd>
            </dl>
        </div>
    </div>
</div>

<!-- Custom Styling -->
<style>
    .blue-theme {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
    }

    .order-container {
        max-width: 700px;
    }

    dt {
        margin-bottom: 0.25rem;
    }

    dd {
        margin-bottom: 1rem;
    }
</style>
